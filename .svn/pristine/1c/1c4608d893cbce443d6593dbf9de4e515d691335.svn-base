@charset "utf-8";
/* CSS Document */
/*reset*/
html, body, div, h1, h2, h3, h4, h5, h6, ul, li, ol, dl, dt, dd, p, span, em, b, i, input, select, textarea{margin:0; padding:0;}
body{font-size:12px; line-height:180%; font-family:Verdana, Simsun;}
ul, li{list-style:none;}
em, i{font-style:normal;}
img{border:0;}
a{text-decoration:none; color:#333;}
a:hover{text-decoration:underline; color:#3DA2E1;}

/*default*/
.left{text-align:left;}
.right{text-align:right;}
.center{text-align:center;}
.fl{float:left;}
.fr{float:right;}
.clear{clear:both;}
.clearfix:after{display:block; height:0; font-size:0; content:"."; clear:both;}
.clearfix{*zoom:1;}

html{height:100%;}
body.login{position: relative;}
body.login .list {width: 100%;height: 100%;overflow: hidden;}
body.login .wrap {position: absolute;width: 100%;height: 100%;top: 0px;left: 0px;}
.login .main {margin: 0 auto;width: 100%;height: 100%;}
.login .foot {position: fixed;left: 0;bottom: 0;width: 100%;height: 58px;background:rgba(255,255,255,.8);filter:progid:DXImageTransform.Microsoft.gradient(startcolorstr=#CCFFFFFF,endcolorstr=#CCFFFFFF);}
.login .foot p {line-height: 58px;text-align: center;color: #4b4b4b;}
.login-box{width:100%;height: 100%;}
.login-box2 {position: absolute;box-sizing: border-box;width: 410px;height: 267px;padding: 30px 0 0 50px;margin:auto;background: rgba(236, 251, 254, .8);filter:progid:DXImageTransform.Microsoft.gradient(startcolorstr=#CCECFBFE,endcolorstr=#CCECFBFE);border: 1px solid #fff;border-radius: 5px;top: 0; left: 0; bottom: 0; right: 0;overflow:hidden;}
:root #ie9-filter{  filter:none;  }
span.icon_logo {position: absolute;top: 12px;left: 105px;width: 210px;height: 38px;border-radius: 5px;border-bottom-left-radius: 0;overflow: hidden;}
.login-box h3 {padding-left: 60px;margin-bottom: 5px;margin-top: 22px;height: 30px;letter-spacing: 3px;font: 18px/30px Simhei;color: #2aabd6;}
.login-item {margin-bottom: 12px;height: 35px;}
.login-item em {margin-right: 2px;font: bold 14px/35px Simsun;color: #6c6c6c;}
.login-item .mini-textbox-border {position: relative;padding-left: 5px;height: 24px;width:89% !important;border-radius: 3px;vertical-align: middle;font: 14px/25px Simsun;border: 1px solid #7ea2a6;background: url(../images/login-input-bg.gif) no-repeat;}
.login-error {margin-bottom: 15px;padding-left: 64px;color: #ff4107;}
.login-btn input {position: absolute;width: 200px;height: 28px;color: #fff;font-weight: bold;font-size: 1.3em;background: #2AABD5;border: 0;outline: none;border-radius: 4px;left: 115px;}
/*bottom: 28px;*/
.login-btn input:hover {cursor: pointer;background: #4EB2D6;}
#codechar {padding-right: 18px !important;}
.mini-buttonedit{width:100% !important;}
.mini-errorIcon{margin-top:5px !important;}
#vCode_container{position:absolute;top:185px;left:113px;}
#vCode_container>input{width:100px;height:26px;border:1px solid #7EA2A6;border-radius:3px;padding-left:5px;outline:none;margin-right:10px;font-size:9pt;background: url(../images/login-input-bg.gif) no-repeat;}
#vCode_container>img{position:absolute;border:1px solid #7EA2A6;border-radius:3px;margin-top:1px;cursor:pointer;}
.userYz .mini-textbox-border{width:74% !important;}
